{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "windres-compile",
            "type": "shell",
            "command": "windres",
            "args": [
                "Source/resources.rc",
                "-o",
                "Source/resources.o"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "cppbuild",
            "label": "编译所有源文件",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "source/*.cpp",
                "Source/resources.o",
                "-o",
                "output/main.exe",
                "-lshlwapi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            //编译依赖项,资源文件先编译
            "dependsOn": "windres-compile"
        },
        {
            "type": "cppbuild",
            "label": "编译调试版本",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "source/*.cpp",
                "Source/resources.o",
                "-o",
                "output/debug/main.exe",
                "-lshlwapi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            //编译依赖项,资源文件先编译
            "dependsOn": "windres-compile"
        },
        {
            "type": "cppbuild",
            "label": "编译发布版本",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "-s",
                "source/*.cpp",
                "Source/resources.o",
                "-o",
                "output/release/FTC.exe",
                "-lshlwapi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            //编译依赖项,资源文件先编译
            "dependsOn": "windres-compile"
        }
    ]
}